block content
  form(action='/calcular', method='POST', id='calculoForm')
    label(for='sexo') Sexo
    select(id='sexo', name='sexo')
      option(value='masculino') Masculino
      option(value='femenino') Femenino

    label(for='edad') Edad
    input(type='number', id='edad', name='edad', required)

    label(for='peso') Peso (kg)
    input(type='number', id='peso', name='peso', required)

    label(for='altura') Altura (cm)
    input(type='number', id='altura', name='altura', required)

    label(for='actividad') Actividad FÃ­sica
    select(id='actividad', name='actividad')
      option(value='sedentario') Sedentario
      option(value='ligeramenteActivo') Ligeramente Activo
      option(value='moderadamenteActivo') Moderadamente Activo
      option(value='muyActivo') Muy Activo
      option(value='extraActivo') Extra Activo

    label(for='objetivo') Objetivo
    select(id='objetivo', name='objetivo')
      option(value='mantener') Mantener Peso
      option(value='perder') Perder Peso
      option(value='ganar') Ganar Peso

    button(type='submit', id='calcularBtn') Calcular

  div#resultado